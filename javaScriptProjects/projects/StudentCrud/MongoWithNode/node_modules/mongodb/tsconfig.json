{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "ES2022.Error", "ES2022.Object"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*"]
}
